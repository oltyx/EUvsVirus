<!doctype html>
<html>

<head>
  <title>Vending Machine</title>
  <link href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300" rel="stylesheet">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
  <link rel="stylesheet" href="css/profile.css">
</head>

<body>
    <h1 id="welcome" style="background-color: #37474f">Admin Welcome</h1>
  <div class="container">

    <!-- LOCAL INFORMATION -->
    <div class="col-sm-4 ">
      <div class="well mb-5">
        <% if (user.local.email) { %>
        <p style="font-size: 20px">
          <strong>id</strong>:
          <%= user._id %><br>
          <strong>email</strong>:
          <%= user.local.email %><br>
        </p>
    <div class="container-fluid text-center">
        <a href="/unlink/local" class="   " style="font-size: 25px" >Unlink</a>
        <% } else { %>
            <a href="/connect/local" class="btn btn-default " style="font-size: 25px">Connect Local</a>
        <% } %>
        <a href="/logout" class="btn btn-default btn-sm" style="font-size: 25px">Logout</a>
    </div>


      </div><br>

    <div class="row">
        <div class=" container-fluid well ">
          <section class="itemUpdate ">

            <img src="<%= user.profileImg %>" alt="">
            <form action="/up" enctype="multipart/form-data" method="post">
              <input type="file" name="file-to-upload">
              <input class="btnN" type="submit" value="Upload" style="background-color: #37474f">
            </form>
            <% if (user.local.email) { %>
              <form id="formBreak" action="/messages" method="POST">
              <span>User:
              <input type="text" value="<%= user.local.email %>" name="name"></span>
                <span style="font-size: 20px">Item Name:
              <input type="text" placeholder="Item" name="item"></span>
                <span style="font-size: 20px">Count:
              <input type="text" placeholder="Amount" name="count"></span>
                <span style="font-size: 20px">Price:
              <input type="text" placeholder="Price $" name="price"></span>
                <div class="container ">
                <button type="submit" class="container center-vertically" style="background-color: #37474f">Submit</button>
                </div>
              </form>
            <% } %>
          </section>
        </div>

      </div>
    </div>
    <div class="col-sm-6">
      <h1 id="cV">Current Vending Machine Items</h1>
      <ul class="messages itemList">
        <% for(var i=0; i<9; i++) {%>
        <li class="message">
          <span><img id="icon" src="<%= messages[i].image %>" alt=""></span>
          <span>Item Name:
            <%= messages[i].item %></span>
          <span>Item Count:
            <%= messages[i].count %></span>
          <span>Item Price:
              <%= messages[i].price %></span>
          <span><i class="fas fa-trash-alt"></i></span>
        </li>
        <% } %>
      </ul>

    </div>
    
  </div>
  <section class="  bottom container well ">
    <section class="reCon">
      <h1 class=" container open-font ">Refill Items</h1>
      <section class="refill">
        <% for(var i=0; i<messages.length; i++) {%>
            <% if(messages[i].count == 0){ %>
              <section>
              <span><img  src="<%= messages[i].image %>" alt=""></span>
              <span style="font-size: 20px" class="open-font">Item Name: <%= messages[i].item %></span>
            </section>
              <% } %>
        <% } %>
      </section>
    </section>
    <section>
      <h1 >Stats</h1>
      <section class="container-fluid gei ml-5" >
        <p  style="font-size: 25px " >Daily Total: $<span id="totalView"></span></p>
      </section>
    </section>
  </section>

  <script src="js/profile.js"></script>
  <script src="js/script.js" type="text/javascript"></script>
  
</body>

</html>
